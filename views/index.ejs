<!DOCTYPE html>
<html>
  <head>
    <title>Trash Reports</title>
    <style>

body {
    background-color: #fee440;
}
svg {
    z-index: -1;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
}

      #mainBody {
        z-index:100;
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5;
        margin: 0;
        padding: 0;
      }
      
      h1 {
        color:black;
        font-size: 70px;
        text-align: center;
      }

      h2 {
        font-size: 35px;
        text-align: center;
      }

      ul{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        list-style-type:none;
        }
      li{
            margin-bottom: 10px;
            display: block;
            padding: 5px 10px;
            color:white;
        }
      
        a {
        text-decoration:none;
        background-color: #03a87c;
        color: white;
        padding: 8px 16px;
        font-family: sans-serif;
        border-radius: 3px;
        font-weight:bold;
    }
  
    a:hover {
        background-color: #029e74;
    }

    #newReport {
        background-color: blue;
    }

      
    </style>
  </head>
  <body>
    <div id="mainBody">
    <h1>Neighborhood waste management</h1>
    <h2>Select a Neighborhood:</h2>
    <ul>
      <% neighborhoods.forEach(n => { %>
        <li><a href="/neighborhood/<%= n.id %>"><%= n.name %></a></li>
      <% }); %>
      <li><a id="newReport" href="/new">New Report</a></li>
    </ul>
    </div>
    
  </body>
